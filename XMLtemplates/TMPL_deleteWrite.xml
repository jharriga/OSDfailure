<?xml version="1.0" encoding="UTF-8" ?>
<workload name="delete_write" description="RGW failure testing">


<!-- Initialization -->
  <storage type="RUNTESTstorage_type" config="timeout=RUNTESTtimeout" retry="RUNTESTretry"/>
  <auth type="RUNTESTauth_type" config="RUNTESTconfig"/>

  <workflow>

<!-- 
1) No failures 
2) Single OSD_device failure 
3) Simulate loss of OSD node by dropping a network interface

-->

<!-- Use object sizes as defined in vars.shinc	 -->
<!-- Operation mix is: 60% write, 40% delete
     -->

 <workstage name="no_failure">
         <work name="writeDelete" workers="RUNTESTworkers" runtime="RUNTESTruntime" >
         <operation name="size1_write" type="write" ratio="20"  config="containers=u(1,40);objects=u(4020,6040);sizes=RUNTESTsizes1"  />
         <operation name="size2_write" type="write" ratio="20" config="containers=u(41,80);objects=u(4020,6040);sizes=RUNTESTsizes2"  />
         <operation name="size3_write" type="write" ratio="20" config="containers=u(81,100);objects=u(4020,6040);sizes=RUNTESTsizes3"  />
	<operation type="delete" ratio="10" config="containers=c(1,40);objects=u(1,4020)" />
	<operation type="delete" ratio="15" config="containers=c(41,80);objects=u(1,4020)" />
	<operation type="delete" ratio="15" config="containers=c(81,100);objects=u(1,4020)" />
        </work>
    </workstage>


 <workstage name="osd_failure">
         <work name="writeDelete" workers="RUNTESTworkers" runtime="RUNTESTruntime" >
         <operation name="size1_write" type="write" ratio="20"  config="containers=u(1,40);objects=u(6040,8040);sizes=RUNTESTsizes1"  />
         <operation name="size2_write" type="write" ratio="20" config="containers=u(41,80);objects=u(6040,8040);sizes=RUNTESTsizes2"  />
         <operation name="size3_write" type="write" ratio="20" config="containers=u(81,100);objects=u(6040,8040);sizes=RUNTESTsizes3"  />
        <operation type="delete" ratio="10" config="containers=c(1,40);objects=u(1,6040)" />
        <operation type="delete" ratio="15" config="containers=c(41,80);objects=u(1,6040)" />
        <operation type="delete" ratio="15" config="containers=c(81,100);objects=u(1,6040)" />
        </work>
    </workstage>


 <workstage name="node_failure">
         <work name="writeDelete" workers="RUNTESTworkers" runtime="RUNTESTruntime" >
         <operation name="size1_write" type="write" ratio="20"  config="containers=u(1,40);objects=u(8040,10040);sizes=RUNTESTsizes1"  />
         <operation name="size2_write" type="write" ratio="20" config="containers=u(41,80);objects=u(8040,10040);sizes=RUNTESTsizes2"  />
         <operation name="size3_write" type="write" ratio="20" config="containers=u(81,100);objects=u(8040,10040);sizes=RUNTESTsizes3"  />
        <operation type="delete" ratio="10" config="containers=c(1,40);objects=u(1,8040)" />
        <operation type="delete" ratio="15" config="containers=c(41,80);objects=u(1,8040)" />
        <operation type="delete" ratio="15" config="containers=c(81,100);objects=u(1,8040)" />
        </work>
    </workstage>


  </workflow>

</workload>
